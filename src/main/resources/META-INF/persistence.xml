<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence 
               http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <persistence-unit name="bdjpa" transaction-type="JTA">
        <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
        <class>com.ravehalcajpa.model.Mesa</class>
        <class>com.ravehalcajpa.model.Cliente</class>
        <class>com.ravehalcajpa.model.Egreso</class>
        <class>com.ravehalcajpa.model.Producto</class>
        <class>com.ravehalcajpa.model.CategoriaProducto</class>
        <class>com.ravehalcajpa.model.Usuario</class>
        <class>com.ravehalcajpa.model.PerfilUsuario</class>        
        <class>com.ravehalcajpa.model.TipoUsuario</class>
        <class>com.ravehalcajpa.model.Inventario</class>
        <class>com.ravehalcajpa.model.Pedido</class>
        <class>com.ravehalcajpa.model.DetallePedido</class>




        <properties>
            <property name="jakarta.persistence.jdbc.url"  value="jdbc:mysql://localhost:3307/pruebadb?zeroDateTimeBehavior=convertToNull" />
            <property name="jakarta.persistence.jdbc.user" value="root" />
            <property name="jakarta.persistence.jdbc.password" value=" " />
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
			
        </properties>
    </persistence-unit>
</persistence>